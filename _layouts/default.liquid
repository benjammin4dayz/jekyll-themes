<!doctype html>
<html lang='en'>
  <!-- Flow Theme for Jekyll by @benjammin4dayz on Discord & GitHub -->
  <!-- Check out my personal site: https://benjammin4dayz.github.io -->
  <head>
    {% include _theme-head.html -%}
    {% include head.html -%}
  </head>
  <body>
    <main>
      <!-- Home / Landing -->
      <article id='home' class='page home-landing__background'>
        <!-- Tagline -->
        <header class='home-landing__hero home-landing__hero--flexcol text-center'>
          {% assign alias = site.client.name | split: ' ' | first -%}
          {% assign intro = site.client.intro -%}
          {% assign profession = site.client.profession -%}
          <h1 class='home-landing__hero-big-text'>
            {{ intro }}
            {{ alias }}!
          </h1>
          <h4 class='home-landing__hero-less-big-text'>{{ profession }}</h4>
        </header>
        <!-- Portrait Photo -->
        <figure class='home-landing__portrait-frame'>
          {% if site.client.portrait_url -%}
            {% assign portrait_src = site.client.portrait_url -%}
          {% else -%}
            {% assign portrait_src = site.baseurl
              | append: '/assets/portrait.jpg'
            -%}
          {% endif -%}
          <img
            src='{{ portrait_src }}'
            alt='Portrait'
            class='home-landing__portrait-image'
          >
        </figure>
        <!-- Social Links -->
        <section class='home-landing__social-links-container'>
          {% include _gen-socials.liquid -%}
        </section>
        {% include _gen-landing-nav.liquid -%}
      </article>
      <!-- Additional Articles -->
      {% include _gen-articles.liquid -%}
    </main>
    <script src='{{ site.baseurl }}/assets/js/flow-theme.js'></script>
    {{ content }}
  </body>
  <!-- Â© 2023 Benjammin4dayz. Some rights reserved. -->
</html>
