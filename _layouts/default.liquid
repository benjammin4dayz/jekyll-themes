<!doctype html>
<html lang='en'>
  <!-- Flow Theme for Jekyll by @benjammin4dayz on Discord & GitHub -->
  <!-- Check out my personal site: https://benjammin4dayz.github.io -->
  <head>
    {% include _theme-head.html -%}
    {% include head.html -%}
  </head>
  <body>
    <main>
      <!-- Home / Landing -->
      <article id='home' class='page'>
        <!-- Tagline -->
        <header class='hero text-center'>
          {% assign alias = site.client.name | split: ' ' | first -%}
          {% assign intro = site.client.intro -%}
          {% assign profession = site.client.profession -%}
          <h1>
            {{ intro }}
            {{ alias }}!
          </h1>
          <h4>{{ profession }}</h4>
        </header>
        <!-- Portrait Photo -->
        <figure>
          {% if site.client.portrait_url -%}
            {% assign portrait_src = site.client.portrait_url -%}
          {% else -%}
            {% assign portrait_src = site.baseurl
              | append: '/assets/portrait.jpg'
            -%}
          {% endif -%}
          <img
            src='{{ portrait_src }}'
            alt='Portrait'
          >
        </figure>
        <!-- Social Links -->
        <section class='links'>{% include _gen-socials.liquid -%}</section>
        {% include _gen-landing-nav.liquid -%}
      </article>
      <!-- Additional Articles -->
      {% include _gen-articles.liquid -%}
    </main>
    <script src='{{ site.baseurl }}/assets/js/flow-theme.js'></script>
  </body>
  <!-- Â© 2023 Benjammin4dayz. Some rights reserved. -->
</html>
